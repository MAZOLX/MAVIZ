{
  "name": "mavi-mlm-backend",
  "version": "2.1.0",
  "description": "Complete backend for MAVIZ MLM Platform with auto-exchange rates and Flutterwave integration",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "dev": "NODE_ENV=development nodemon --watch ./ --ext js,json --delay 1500ms --exec node server.js",
    "prod": "NODE_ENV=production pm2 start server.js --name 'mavi-backend'",
    "update-rates": "node scripts/updateRates.js >> logs/rates.log 2>&1",
    "schedule-rates": "node scripts/schedule.js >> logs/scheduler.log 2>&1",
    "test": "NODE_ENV=test jest --coverage --detectOpenHandles",
    "lint": "eslint . --ext .js,.json --fix",
    "security-check": "npm audit --production --audit-level=critical",
    "db:migrate": "node scripts/migrations.js",
    "clean": "rm -rf node_modules && npm install",
    "log:rates": "tail -f logs/rates.log",
    "log:server": "tail -f logs/server.log",
    "docker:build": "docker build -t mavi-backend .",
    "docker:run": "docker run -p 3000:3000 --env-file .env mavi-backend"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "axios": "^1.6.7",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.4",
    "ethers": "^6.11.1",
    "express": "^4.18.3",
    "express-rate-limit": "^6.8.1",
    "flutterwave-node-v3": "^1.0.5",
    "helmet": "^7.1.0",
    "mongoose": "^8.1.3",
    "morgan": "^1.10.0",
    "nanoid": "^5.0.4",
    "node-cron": "^3.0.2",
    "pm2": "^5.3.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "mlm",
    "blockchain",
    "flutterwave",
    "cryptocurrency",
    "liquidity",
    "matrix",
    "naira-rewards"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/mavi-mlm-backend.git"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/yourusername/mavi-mlm-backend/issues"
  },
  "homepage": "https://github.com/yourusername/mavi-mlm-backend#readme"
}
